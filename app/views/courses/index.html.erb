<p id="notice"><%= notice %></p>

<h1>Listing Courses (<%= @courses.length %>)</h1>

<div class="col-md-6">
<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <% if !course.category.nil? %>
            <td><%= link_to  category_path(course.category_id) ,class: "btn btn-xs btn-info" do%>
              <i class="glyphicon glyphicon-plus"></i><%=course.category.try(:name)%>
                  <%   end %>
                  </td>
        <% else %>
            <td>no category</td>
        <% end %>


        <td><%= link_to 'Show', course , class: "label label-primary" %></td>



        <% if can? :update, course %>
            <td><%= link_to 'Edit', edit_course_path(course), class: "label label-primary" %></td>
        <% end %>
        <% if can? :destroy, course %>
            <td><%= link_to 'Destroy', course, method: :delete, data: {confirm: 'Are you sure?'} , class: "label label-primary" %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
</div>
<br>

<% if can? :create, Course.new %>
    <%= link_to 'New Course', new_course_path %>
<% end %>
